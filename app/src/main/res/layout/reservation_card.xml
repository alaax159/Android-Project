<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reservation Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/reservation_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: R001"
                    android:background="@drawable/id_badge_background"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/book_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_book_placeholder"
                        android:background="#E0E0E0" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/book_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Great Gatsby"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/book_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="by F. Scott Fitzgerald"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/student_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reserved by: John Smith"
                        android:textSize="14sp"
                        android:textColor="#2C3E50"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E9ECEF"
                android:layout_marginBottom="24dp" />

            <!-- Details Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Student ID -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STUDENT ID"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/student_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STU001"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Book ID -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BOOK ID"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/book_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BK001"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Reservation Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RESERVED ON"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/reservation_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024-01-15"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Due Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DUE DATE"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/due_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024-02-15"
                            android:textSize="14sp"
                            android:textColor="#E74C3C"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Third Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Return Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RETURN DATE"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/return_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not returned"
                            android:textSize="14sp"
                            android:textColor="#95A5A6"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <!-- Collection Method -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COLLECTION"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/collection_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In-Person"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Special Notes Section -->
                <LinearLayout
                    android:id="@+id/layout_special_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPECIAL NOTES"
                        android:textSize="12sp"
                        android:textColor="#6C757D"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/special_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student requested extended loan period for research project."
                        android:textSize="14sp"
                        android:textColor="#2C3E50"
                        android:lineSpacingExtra="2dp"
                        android:padding="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="----"
                        android:layout_marginEnd="12dp"
                        android:id="@+id/ac1"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="----"
                        android:layout_marginEnd="12dp"
                        android:id="@+id/ac2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>