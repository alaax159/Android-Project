<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">


<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Book Information"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/tv_book_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 1001"
                    android:background="@drawable/id_badge_background"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/iv_book_cover"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_book_placeholder"
                        android:background="#E0E0E0" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/tv_book_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Great Gatsby"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_book_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="by F. Scott Fitzgerald"
                        android:textSize="16sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_availability_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AVAILABLE"
                        android:background="@drawable/available_badge_background"
                        android:textColor="#155724"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:layout_gravity="start" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!-- here is the start icon -->
                        <!-- here is the plus icon -->


                        <CheckBox
                            android:layout_marginLeft="20dp"
                            android:id="@+id/starToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@drawable/favorite"
                            android:padding="0dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text=""
                            android:buttonTint="@null"/>

                        <TextView
                            android:id="@+id/reserveButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:text="+"
                            android:textSize="28dp"
                            android:layout_marginTop="4dp"
                            android:clickable="true"/>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E9ECEF"
                android:layout_marginBottom="24dp" />

            <!-- Details Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- ISBN -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ISBN"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_isbn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="978-0-7432-7356-5"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Publication Year -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PUBLICATION YEAR"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_publication_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1925"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CATEGORY"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classic Literature"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Availability Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_availability_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Stock"
                            android:textSize="14sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>