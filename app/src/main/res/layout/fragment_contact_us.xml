<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact us and location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="16dp" />

                <!-- Statistics Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Total Books Borrowed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/stat_card_background">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/CallLy"
                            android:layout_width="89dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:text="call library"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            app:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="31dp"
                            android:gravity="center"
                            android:text="+970-2-222222"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Currently Borrowed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/stat_card_background">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/FindUs"
                            android:layout_width="90dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:text="Google Map"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            app:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Library location"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Overdue Books -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/stat_card_background">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/Email"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:text="Email"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            app:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="library@birzeit.edu"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Edit Profile Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Additional Information"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/working_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="• Sun - Thu: 8:00 AM - 8:00 PM\n   Fri - Sat: Closed"
                    android:textColor="#6B7280"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="• Services Offered:"
                    android:textColor="#6B7280"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TheServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="       Book Lending\n       Research Assistance\n       Book Recommendation"
                    android:textColor="#6B7280"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Policies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="• NO "
                    android:textColor="#6B7280"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>