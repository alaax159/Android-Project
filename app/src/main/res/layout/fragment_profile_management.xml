<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Picture Section -->
                <!-- Profile Picture Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <FrameLayout
                        android:layout_width="125dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/iv_book_cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_book_placeholder" />

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>
                </LinearLayout>


                <!-- User Name Display -->
                <TextView
                    android:id="@+id/user_name_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alaa faraj"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/universityID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="20250808"
                        android:textColor="#6B7280"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="--"
                        android:textColor="#6B7280"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="Computer eng"
                        android:textColor="#6B7280"
                        android:textSize="16sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="level"
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/StudentLevel"/>

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alaa@university.edu"
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Borrowing Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Borrowing History"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="16dp" />

                <!-- Statistics Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Total Books Borrowed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/stat_card_background">

                        <TextView
                            android:id="@+id/tv_total_borrowed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Borrowed"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Currently Borrowed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/stat_card_background">

                        <TextView
                            android:id="@+id/tv_currently_borrowed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Overdue Books -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/stat_card_background">

                        <TextView
                            android:id="@+id/tv_overdue_books"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#DC3545" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overdue"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Edit Profile Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="20dp" />

                <!-- First Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextFirst_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditFirst_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:text="Alaa"
                        android:textColor="@color/colorText" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Last Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextLast_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditLast_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:text="Faraj"
                        android:textColor="@color/colorText" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/StartCPhone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:prefixText="+970 "
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:text="059 452 8583"
                        android:textColor="@color/colorText" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Update Personal Info Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_update_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Update Personal Information"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Change Password Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Security Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="20dp" />

                <!-- Current Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/current_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:passwordToggleEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditCurrent_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Current Password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorText" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- New Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:passwordToggleEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditNew_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorText" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm New Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:passwordToggleEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditConfirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm New Password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorText" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Requirements -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/password_requirements_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password Requirements:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/requirement_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• At least 8 characters"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/requirement_uppercase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• At least one uppercase letter"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/requirement_lowercase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• At least one lowercase letter"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/requirement_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• At least one number"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/requirement_special"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• At least one special character"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                </LinearLayout>

                <!-- Change Password Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:backgroundTint="#DC3545"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account Actions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="16dp" />

                <!-- View Borrowing History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_history"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="View Complete Borrowing History"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_history"
                    app:iconGravity="start"
                    android:layout_marginBottom="12dp" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:backgroundTint="#6C757D"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="start" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>